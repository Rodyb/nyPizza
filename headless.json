{
  "src_folders": [
    "tests"
  ],
  "output_folder": "reports",
  "custom_commands_path": "commands",
  "page_objects_path": "page_objects",
  "custom_assertions_path": "",
  "globals_path": "./globals.js",
  "live_output": false,
  "parallel_process_delay": 10,
  "disable_colors": true,
  "test_workers": false,
  "reporter": "./html-reporter.js",

  "selenium" : {
    "start_process" : false
  },
  "test_settings" : {
    "default" : {
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "path": "screenshots"
      },
      "launch_url" : "",
      "selenium_port"  : 9515,
      "selenium_host"  : "localhost",
      "silent": true,
      "output": true,
      "default_path_prefix": "",
      "detailed_output": false,
      "globals": {

      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "chromeOptions" : {
          "args" :
          ["window-size=1400,1000", "headless", "disable-gpu", "--no-sandbox"]
        }
      }
    },
    "localEnvironment": {
      "globals": {

      }
    },
    "chrome" : {
      "desiredCapabilities": {
        "browserName": "chrome"
      },
      "ie" : {
        "desiredCapabilities": {
          "browserName": "ie"
        }
      }
    }
  }
}
